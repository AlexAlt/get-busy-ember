<div class="container update-form">
  {{#if updatePostForm}}
  <h1>Update Post</h1>
       <form>
             <div class="form-group">
               <label for="date">Date</label>
               {{input class="form-control" value=date id="date"}}
             </div>

             <div class="form-group">
               <label for="title">Title</label>
               {{input class="form-control" value=title id="title"}}
             </div>

             <div class="form-group">
               <label for="author">Author</label>
               {{input class="form-control" value=author id="author"}}
             </div>

             <div class="form-group">
               <label for="image">Image URL</label>
               {{input class="form-control" value=image id="image"}}
             </div>

             <div class="form-group">
               <label for="content">Content</label>
               {{textarea class="form-control" rows="20" value=content id="content"}}
             </div>

             <div class="form-group">
             <button style="border-width: thick; background-color:gray; color:white;" {{action 'update' post}}>Save</button>
             <button class="btn btn-info btn-sm" {{action 'closePostForm'}}>Close Form</button>
            </div>
       </form>
  {{else}}
    <button class="btn btn-primary btn-sm" {{action 'openPostForm'}}>Update</button>
    {{/if}}
   <button class="btn btn-danger btn-sm" {{action 'delete' post}}>Delete</button>
</div>
